{
    "compilerOptions": {
        "jsx": "react",
        "module": "es2015",
        "lib": [
            "es6",
            "es2015",
            "dom"
        ],
        "types": [
            "react",
            "react-dom"
        ],
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "declaration": false,
        "moduleResolution": "node",
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "app/*": ["./app/*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}